<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/busButtonColor"
        android:onClick="goSettings"
        android:text="@string/settingsName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoSizeMaxTextSize="30sp"
        android:background="#E2CF25"
        android:fontFamily="sans-serif-medium"
        android:text="@string/TitleText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/TransportBlocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintVertical_bias="0.17000002">

        <LinearLayout
            android:id="@+id/Block1"
            android:tag="Block1"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blockBackground"
            android:clickable="true"
            android:contextClickable="true"
            android:divider="@android:drawable/dark_header"
            android:fadingEdge="none"
            android:onClick="onBlockClick"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/busIB36"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:backgroundTintMode="add"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="seeTransport36"
                android:scaleType="centerInside"
                android:src="@drawable/bus"
                android:text="@string/bus36" />

            <TextView
                android:id="@+id/bus36name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bus36"
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Block2"
            android:tag="Block2"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blockBackground"
            android:clickable="true"
            android:divider="@android:drawable/dark_header"
            android:onClick="onBlockClick"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/busIB27"
                android:layout_width="255dp"
                android:layout_height="80sp"
                android:background="#00FFFFFF"
                android:backgroundTintMode="add"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="seeTransport27"
                android:scaleType="centerInside"
                android:src="@drawable/bus"
                android:text="@string/bus12" />

            <TextView
                android:id="@+id/bus27name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bus27"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Block3"
            android:tag="Block3"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blockBackground"
            android:clickable="true"
            android:divider="@android:drawable/dark_header"
            android:onClick="onBlockClick"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/busIB12"
                android:layout_width="255dp"
                android:layout_height="82sp"
                android:background="#00FFFFFF"
                android:backgroundTintMode="add"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="seeTransport12"
                android:scaleType="centerInside"
                android:src="@drawable/bus"
                android:text="@string/bus27" />

            <TextView
                android:id="@+id/bus12name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bus12"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Block4"
            android:tag="Block4"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blockBackground"
            android:clickable="true"
            android:divider="@android:drawable/dark_header"
            android:onClick="onBlockClick"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/trollIB14"
                android:layout_width="255dp"
                android:layout_height="82sp"
                android:background="#00FFFFFF"
                android:backgroundTintMode="add"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="seeTransport14"
                android:scaleType="centerInside"
                android:src="@drawable/troll"
                android:text="@string/troll14" />

            <TextView
                android:id="@+id/troll14name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/troll14"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Block5"
            android:tag="Block5"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@color/blockBackground"
            android:clickable="true"
            android:divider="@android:drawable/dark_header"
            android:onClick="onBlockClick"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/trollIB4"
                android:layout_width="255dp"
                android:layout_height="82sp"
                android:layout_gravity="center"
                android:background="#00FFFFFF"
                android:backgroundTintMode="add"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="seeTransport4"
                android:scaleType="centerInside"
                android:src="@drawable/troll"
                android:text="@string/troll4" />

            <TextView
                android:id="@+id/troll4name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/troll4"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>